{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "rootDirs": ["src", "spec"],
      "sourceMap": true,
      "outDir": "dist",
      "lib": ["es2020"],
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "types": ["node"],
      "paths": {
        "@/*": ["src/*"],
        "test/*": ["spec/*"]
      },
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "tsc-alias": {
        "verbose": true,
        "resolveFullPaths": true,
        "replacers": {
          "base-url": {
            "enabled": true
          }
        }
      }
  }